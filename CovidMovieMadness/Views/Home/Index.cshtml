@model IEnumerable<CovidMovieMadness.Models.Post>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Covid Movie Madness</h1>
</div>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("PostID", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink("Rating", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th>
            Post Content
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostContent)
            </td>
            <td>
                @Html.ActionLink("Get To Comment", "GetToComment", new { id = item.Movie.MovieID, PostID = item.PostID })
            </td>
        </tr>
    }

</table>

